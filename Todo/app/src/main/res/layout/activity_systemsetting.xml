<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        style="@style/selfAndteamMenuBtn_style"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="1dp"
        android:id="@+id/btnToday"
        android:drawableStart="@mipmap/today"
        android:onClick="btnUserInfo"
        android:text="个人信息"/>
    <Button
        style="@style/selfAndteamMenuBtn_style"
        android:drawableStart="@mipmap/tomorrow"
        android:layout_marginBottom="1dp"
        android:id="@+id/btnTomorrow"
        android:text="账号管理"/>
    <Button
        style="@style/selfAndteamMenuBtn_style"
        android:drawableStart="@mipmap/tomorrow"
        android:layout_marginBottom="1dp"
        android:id="@+id/btnTomorrow"
        android:text="版本信息"/>
    <Button
        style="@style/selfAndteamMenuBtn_style"
        android:drawableStart="@mipmap/tomorrow"
        android:layout_marginBottom="1dp"
        android:id="@+id/btnExit"
        android:textColor="#FA2525"
        android:onClick="UserExit"
        android:text="退出登录"/>
</LinearLayout>